{
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
			"@images/*": ["images/*.{jpg, png, svg, gif, webp, jpeg, ico}"],
			"@pages/*": ["pages/*"],
			"@services/*": ["services/*"],
			"@styles/*": ["styles/*.{css, scss, sass}"],
			"@tests/*": ["tests/*"],
			"@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
